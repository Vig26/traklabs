<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/adds.css">
    <link rel="stylesheet" href="/css/main.css">
    </head>

    <%- include('./includes/nav.ejs') %>

        <body>
            <form action="/sortEmp" method="POST">
                <button class="sortbtn">SORT</button>
            </form>
            <% if(Employees.length > 0) { %>
                <ul class="orders">
                    <% for (var i=0, iLen=Employees.length; i<iLen; i++) { %>
                        <li class="orders__item">
                            <ul class="orders_products">
                                <li class="orders__products-item">
                                    <label>Employee Name:</label>
                                    <%= Employees[i].emp_name %>
                                        <br>
                                        <label>Employee Age:</label>
                                        <%= Employees[i].emp_age %>
                                            <br>
                                            <label>Employee Dept:</label>
                                            <%= Employees[i].dept_name%>
                                </li>
                                <form action="/editemployee" method="POST">
                                    <button class="btn">Edit</button>
                                    <input type="hidden" name="empName" value="<%=  Employees[i].emp_name %>">
                                    <input type="hidden" name="empAge" value="<%=  Employees[i].emp_age %>">
                                    <input type="hidden" name="empId" value="<%=  Employees[i].id %>">
                                </form>
                                <br>
                                <form action="/delEmp" method="POST">
                                    <button class="btn">Delete</button>
                                    <input type="hidden" name="empId" value="<%= Employees[i].id %>">
                                </form>
                            </ul>
                        </li>
                        <% }; %>
                </ul>
                <% } else { %>

                    <h1>Nothing Departments Added!....</h1>
                    <% } %>
        </body>
        <%- include('./includes/end.ejs') %>